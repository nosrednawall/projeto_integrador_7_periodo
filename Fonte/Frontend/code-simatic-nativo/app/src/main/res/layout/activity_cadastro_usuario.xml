<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="org.iel.codesimatic.activity.CadastroUsuarioActivity">

            <EditText
                android:hint="@string/cadastro_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cadastro_usuario_nome"/>

            <EditText
                android:hint="@string/cadastro_cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cadastro_usuario_cpf"/>

            <EditText
                android:hint="@string/cadastro_setor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cadastro_usuario_setor"/>

            <EditText
                android:hint="@string/cadastro_ramal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cadastro_usuario_ramal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cadastro_usuario_radio_group"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cadastro_usuario_feminino"
                        android:text="@string/cadastro_feminino"
                        android:layout_gravity="left"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cadastro_usuario_masculino"
                        android:text="@string/cadastro_masculino"
                        android:layout_gravity="right"
                        android:layout_marginLeft="80pt"/>
                </RadioGroup>
            </LinearLayout>


            <EditText
                android:hint="@string/cadastro_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cadastro_usuario_email" />

            <EditText
                android:hint="@string/cadastro_senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cadastro_usuario_senha"/>

            <Button
                android:text="@string/cadastro_salvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cadastro_usuario_salvar"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>